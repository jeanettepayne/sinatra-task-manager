
    <!-- This page allows you to create a new manager. -->
  
        <div>
        <% if flash.has?(:message) %>
        <%= flash[:message] %>
        <% end %>
        
        <h1>Create New Manager Profile</h1>

        <form action="/managers/signup" method="POST">
            <label>Name: </label>
            <input type="text" name="manager[name]" id="manager_name" placeholder="Enter First and Last Name" required>
            <br>
            <label>Department: </label>
            <!-- potentially abstract later -->
            <select name="manager[department]" id="manager_department">
                <option value="Select Department" selected disabled hidden>--Select Department--</option>
                <option value="Accounting">Accounting</option>
                <option value="Human Resources">Human Resources</option>
                <option value="Administration">Administration</option>
                <option value="Research">Research</option>
                <option value="Marketing">Marketing</option>
                <option value="Production">Production</option>
                <option value="Sales">Sales</option>
            </select>
            <br>
            <label>Title: </label>
            <input type="text" name="manager[title]" id="manager_title" placeholder="Enter Job Title" required>
            <br>
            <label>Add Employee(s): </label>
            <br>
                <% Employee.all.each do |employee| %>
                    <input type="checkbox" name="manager[employee_ids][]" value="<%= employee.id %>"><%= employee.name %><br>
                <% end %>
            <label>Email: </label>
            <input type="email" name="manager[email]" id="manager_email" placeholder="Enter Email Address" required>
            <br>
            <label>Password: </label>
            <input type="password" name="manager[password]" id="manager_password" placeholder="Create Your Password" required>
            <br>
    
        
            <input type="submit" value="Submit">
            </div>

   